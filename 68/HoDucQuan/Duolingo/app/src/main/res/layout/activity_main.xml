<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="180dp"
        android:background="@drawable/button1"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button1"
            app:srcCompat="@drawable/rice"
            android:contentDescription="@string/Todo" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="80sp"
            android:layout_height="20sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:text="@string/Rice"
            android:textColor="@android:color/primary_text_light" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:background="@drawable/button1"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:background="@drawable/button1"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/cake"
            android:contentDescription="@string/todo" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="80sp"
            android:layout_height="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="162dp"
            android:layout_marginEnd="80dp"
            android:text="@string/cake"
            android:textColor="@android:color/primary_text_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:background="@drawable/button1"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="360dp">


        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="80sp"

            android:layout_height="20sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="0dp"
            android:text="@string/tea"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:background="@drawable/button1"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/tea"
            android:contentDescription="@string/todo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/button1">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="80sp"

            android:layout_height="20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="0dp"
            android:text="@string/Bread"
            android:textColor="@android:color/primary_text_light" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/brea" />


    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/button"
        android:text="@string/ki_m_tra" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="230sp"
        android:layout_height="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="@string/u_l_b_nh_m"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_light"
        android:textSize="26sp" />

    <Button
        android:onClick="quandeptrai"
        android:id="@+id/button2"
        android:textColor="@android:color/secondary_text_light_nodisable"

        android:background="@drawable/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/X" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>