<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:background="#F8FFFCFC"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="161dp"
                android:layout_height="202dp"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom"
                android:drawableTop="@drawable/coffee"
                android:gravity="center"
                android:text="coffee"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="161dp"
                android:layout_height="202dp"
                android:background="@drawable/custom"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@+id/button1"
                android:drawableTop="@drawable/rice"
                android:gravity="center"
                android:text="rice"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="161dp"
                android:layout_height="202dp"
                android:background="@drawable/custom"
                android:layout_below="@id/button1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/food"
                android:gravity="center"
                android:text="food"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="161dp"
                android:layout_height="202dp"
                android:layout_below="@id/button2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_toRightOf="@+id/button3"
                android:background="@drawable/custom"
                android:drawableTop="@drawable/tea"
                android:gravity="center"
                android:text="break"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="360dp"
                android:layout_height="41dp"
                android:layout_below="@id/button3"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:enabled="false"
                android:background="@drawable/custom_check"
                android:gravity="center"
                android:text="Kiểm Tra" />

                <TextView
                    android:id="@+id/textView"
                    bánh
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="68dp"
                    android:gravity="left"
                    android:text="@string/stringName"
                    android:textColor="#131314"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="UnknownId"
                    tools:text='Đâu là "thức ăn" ?' />
</android.support.constraint.ConstraintLayout>