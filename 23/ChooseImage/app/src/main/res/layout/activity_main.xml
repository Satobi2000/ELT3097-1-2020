<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:background="#F8FFFCFC"
    >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="161dp"
                    android:layout_height="202dp"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom"
                    android:drawableTop="@drawable/coffee"
                    android:gravity="center"
                    android:text="@string/coffee"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_marginStart="25dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="161dp"
                    android:layout_height="202dp"
                    android:background="@drawable/custom"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/button1"
                    android:drawableTop="@drawable/rice"
                    android:gravity="center"
                    android:text="@string/rice"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_toEndOf="@+id/button1" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="161dp"
                    android:layout_height="202dp"
                    android:background="@drawable/custom"
                    android:layout_below="@id/button1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:drawableTop="@drawable/food"
                    android:gravity="center"
                    android:text="@string/food"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_marginStart="25dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="161dp"
                    android:layout_height="202dp"
                    android:layout_below="@id/button2"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toEndOf="@+id/button3"
                    android:layout_toRightOf="@+id/button3"
                    android:background="@drawable/custom"
                    android:drawableTop="@drawable/tea"
                    android:gravity="center"
                    android:text="@string/bread"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="360dp"
                    android:layout_height="41dp"
                    android:layout_below="@id/button3"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:enabled="false"
                    android:background="@drawable/custom_check"
                    android:gravity="center"
                    android:text="@string/ki_m_tra" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:gravity="left"
                    android:text="@string/stringname"
                    android:textColor="#131314"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="UnknownId"
                    tools:text='Đâu là "thức ăn" ?'
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
</LinearLayout>